@model IEnumerable<DMUViews.Models.Movie>


@{
    ViewBag.Title = "Home Page";
}

<div class="row">

    <div class="col-lg-3">

        <h5 class="my-4">Top Rated Movies by Genre </h5>
        <div class="list-group">
            <a href="#" class="list-group-item">Action</a>
            <a href="#" class="list-group-item">Adventure</a>
            <a href="#" class="list-group-item">Animation</a>
            <a href="#" class="list-group-item">Comedy</a>
            <a href="#" class="list-group-item">Crime</a>
            <a href="#" class="list-group-item">Drama</a>
            <a href="#" class="list-group-item">Fantasy</a>
            <a href="#" class="list-group-item">Horror</a>
            <a href="#" class="list-group-item">Romance</a>
            <a href="#" class="list-group-item">Science-Fiction</a>
            <a href="#" class="list-group-item">Thriller</a>
        </div>

        <div class="row">
            <aside class="ml-4 mt-4 col-3">
                <a class="twitter-timeline" data-width="250" data-height="500" href="https://twitter.com/dmuleicester?ref_src=twsrc%5Etfw">Tweets by dmuleicester</a>
                <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
            </aside>
        </div>

    </div>

    <!-- /.col-lg-3 -->
    <div class="col-lg-9">

        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>

            @{
                var images = Model.ToList().Take(3).Select(m => m.Image).ToList();
            }
            <div class="carousel-inner" role="listbox">

                <div class="carousel-item">
                    <img class="d-block img-fluid" src="@Url.Content("~/ImageVideoFiles/" +images[0])" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="@Url.Content("~/ImageVideoFiles/" +images[1])" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid" src="@Url.Content("~/ImageVideoFiles/" +images[2])" alt="First slide">
                </div>

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="row">


            @foreach (var movie in Model)
            {


                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="#"><img class="card-img-top" src="@Url.Content("~/ImageVideoFiles/" +movie.Image)" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="@Url.Action("Details", "Movies", new { id = movie.MovieId })">@movie.MovieTitle</a>
                            </h4>
                            <p class="card-text">
                                @movie.Description
                            </p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9733; &#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        </div>
                    </div>
                </div>

            }

        </div>
        <!-- /.row -->

    </div>
    <!-- /.col-lg-9 -->

</div>
    <div class="row">
        <aside class="ml-4 mt-4 col-3">
            <a class="twitter-timeline" data-width="250" data-height="500" href="https://twitter.com/dmuleicester?ref_src=twsrc%5Etfw">Tweets by dmuleicester</a>
            <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
        </aside>
    </div>

    <!-- /.row -->
