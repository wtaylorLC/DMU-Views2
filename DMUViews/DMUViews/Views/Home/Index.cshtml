        <div class="row">


            @foreach (var movie in Model)
            {


                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="#"><img class="card-img-top" src="@Url.Content("~/ImageVideoFiles/" + movie.Image)" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="@Url.Action("Details", "Movies", new { id = movie.MovieId })">@movie.MovieTitle</a>
                            </h4>

                            <p>
                                Genres:
                                @{
                                    foreach (var genre in movie.Genres)
                                    {
                                        //@:  @genre.GenreName <br />
                                        <a href="@genre.GenreName">@genre.GenreName</a>
                                    }
                                }
                            </p>
                            <p>
                                Actors:
                                @{
                                    foreach (var actor in movie.Actors)
                                    {
                                        //@:  @genre.GenreName <br />
                                        <a href="@actor.ActorName">@actor.ActorName</a>
                                    }
                                }
                            </p>

                            <p class="card-text">
                                @movie.Description
                            </p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9733; &#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        </div>
                    </div>
